<!-- dashboard/view-note.ejs -->

<form action="/dashboard/item/<%= noteID %>/add-todo" method="post">
    <input type="text" name="todoText" placeholder="Add a to-do item" required>
    <button type="submit">Add Todo</button>
  </form>
  
  <!-- Display existing to-do items -->
  <ul>
    <% note.todoList.forEach(todo => { %>
      <li><%= todo.text %> (<%= todo.completed ? 'Completed' : 'Pending' %>)</li>
    <% }); %>
  </ul>
  